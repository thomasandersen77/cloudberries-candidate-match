<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="20250920-01-create-customer-project-request" author="agent">
        <createTable tableName="customer_project_request">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="customer_name" type="varchar(255)"/>
            <column name="title" type="varchar(255)"/>
            <column name="summary" type="text"/>
            <column name="original_filename" type="varchar(512)"/>
            <column name="original_text" type="text"/>
            <column name="created_at" type="timestamp" defaultValueDate="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="20250920-02-create-project-request-requirement" author="agent">
        <createTable tableName="project_request_requirement">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="project_request_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(500)">
                <constraints nullable="false"/>
            </column>
            <column name="details" type="text"/>
            <column name="priority" type="varchar(16)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="project_request_requirement"
                                 baseColumnNames="project_request_id"
                                 constraintName="fk_req_project_request"
                                 referencedTableName="customer_project_request"
                                 referencedColumnNames="id"/>
        <createIndex tableName="project_request_requirement" indexName="idx_req_project">
            <column name="project_request_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>