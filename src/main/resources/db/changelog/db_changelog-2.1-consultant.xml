<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Add audit/version columns to consultant -->
    <changeSet id="20250910-01-consultant-audit" author="agent">
        <addColumn tableName="consultant">
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="consultant">
            <column name="updated_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="consultant">
            <column name="version" type="bigint">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <!-- Project assignments -->
    <changeSet id="20250910-02-project-assignment" author="agent">
        <createTable tableName="project_assignment">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="consultant_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="start_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="date"/>
            <column name="allocation_percent" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="hourly_rate" type="numeric(12,2)"/>
            <column name="cost_rate" type="numeric(12,2)"/>
            <column name="client_project_ref" type="varchar(255)"/>
            <column name="billable" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="project_assignment"
                                 baseColumnNames="consultant_id"
                                 constraintName="fk_project_assignment_consultant"
                                 referencedTableName="consultant"
                                 referencedColumnNames="id"/>

        <createIndex indexName="idx_project_assignment_consultant" tableName="project_assignment">
            <column name="consultant_id"/>
        </createIndex>
        <createIndex indexName="idx_project_assignment_period" tableName="project_assignment">
            <column name="start_date"/>
            <column name="end_date"/>
        </createIndex>
    </changeSet>

    <!-- Consultant CV and sub-entities -->
    <changeSet id="20250910-03-consultant-cv" author="agent">
        <createTable tableName="consultant_cv">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="consultant_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version_tag" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="quality_score" type="int"/>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="consultant_cv"
                                 baseColumnNames="consultant_id"
                                 constraintName="fk_cv_consultant"
                                 referencedTableName="consultant"
                                 referencedColumnNames="id"/>
        <createIndex indexName="idx_cv_consultant_active" tableName="consultant_cv">
            <column name="consultant_id"/>
            <column name="active"/>
        </createIndex>

        <createTable tableName="cv_key_qualification">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="cv_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="label" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(2000)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="cv_key_qualification"
                                 baseColumnNames="cv_id"
                                 constraintName="fk_key_qualification_cv"
                                 referencedTableName="consultant_cv"
                                 referencedColumnNames="id"/>

        <createTable tableName="cv_education">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="cv_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="degree" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="school" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="from_year" type="int"/>
            <column name="from_month" type="int"/>
            <column name="to_year" type="int"/>
            <column name="to_month" type="int"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="cv_education"
                                 baseColumnNames="cv_id"
                                 constraintName="fk_education_cv"
                                 referencedTableName="consultant_cv"
                                 referencedColumnNames="id"/>

        <createTable tableName="cv_work_experience">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="cv_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="employer" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="from_year" type="int"/>
            <column name="from_month" type="int"/>
            <column name="to_year" type="int"/>
            <column name="to_month" type="int"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="cv_work_experience"
                                 baseColumnNames="cv_id"
                                 constraintName="fk_work_exp_cv"
                                 referencedTableName="consultant_cv"
                                 referencedColumnNames="id"/>

        <createTable tableName="cv_project_experience">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="cv_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="customer" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(2000)">
                <constraints nullable="false"/>
            </column>
            <column name="long_description" type="varchar(4000)"/>
            <column name="from_year" type="int"/>
            <column name="from_month" type="int"/>
            <column name="to_year" type="int"/>
            <column name="to_month" type="int"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="cv_project_experience"
                                 baseColumnNames="cv_id"
                                 constraintName="fk_project_exp_cv"
                                 referencedTableName="consultant_cv"
                                 referencedColumnNames="id"/>

        <createTable tableName="cv_project_experience_role">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="project_experience_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="role_name" type="varchar(255)"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="cv_project_experience_role"
                                 baseColumnNames="project_experience_id"
                                 constraintName="fk_project_exp_role"
                                 referencedTableName="cv_project_experience"
                                 referencedColumnNames="id"/>

        <createTable tableName="cv_project_experience_skill">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="project_experience_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="skill_name" type="varchar(255)"/>
            <column name="duration_in_years" type="int"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="cv_project_experience_skill"
                                 baseColumnNames="project_experience_id"
                                 constraintName="fk_project_exp_skill"
                                 referencedTableName="cv_project_experience"
                                 referencedColumnNames="id"/>

        <createTable tableName="cv_certification">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="cv_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="year" type="int"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="cv_certification"
                                 baseColumnNames="cv_id"
                                 constraintName="fk_certification_cv"
                                 referencedTableName="consultant_cv"
                                 referencedColumnNames="id"/>

        <createTable tableName="cv_course">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="cv_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="organizer" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="year" type="int"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="cv_course"
                                 baseColumnNames="cv_id"
                                 constraintName="fk_course_cv"
                                 referencedTableName="consultant_cv"
                                 referencedColumnNames="id"/>

        <createTable tableName="cv_language">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="cv_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="level" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="cv_language"
                                 baseColumnNames="cv_id"
                                 constraintName="fk_language_cv"
                                 referencedTableName="consultant_cv"
                                 referencedColumnNames="id"/>

        <createTable tableName="cv_skill_category">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="cv_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="category_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="cv_skill_category"
                                 baseColumnNames="cv_id"
                                 constraintName="fk_skill_category_cv"
                                 referencedTableName="consultant_cv"
                                 referencedColumnNames="id"/>

        <createTable tableName="cv_skill_in_category">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="skill_category_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="skill_name" type="varchar(255)"/>
            <column name="duration_in_years" type="int"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="cv_skill_in_category"
                                 baseColumnNames="skill_category_id"
                                 constraintName="fk_skill_in_category_category"
                                 referencedTableName="cv_skill_category"
                                 referencedColumnNames="id"/>

        <createTable tableName="cv_attachment">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="cv_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="file_url" type="varchar(2000)">
                <constraints nullable="false"/>
            </column>
            <column name="file_type" type="varchar(255)"/>
            <column name="file_name" type="varchar(255)"/>
            <column name="size_in_bytes" type="bigint"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="cv_attachment"
                                 baseColumnNames="cv_id"
                                 constraintName="fk_attachment_cv"
                                 referencedTableName="consultant_cv"
                                 referencedColumnNames="id"/>

        <!-- Ensure only one active CV per consultant (partial unique index for active=true) -->
        <sql>CREATE UNIQUE INDEX IF NOT EXISTS uq_cv_consultant_active ON consultant_cv(consultant_id) WHERE active = true;</sql>
    </changeSet>

</databaseChangeLog>

