<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOGS" value="./logs" />

    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{ISO8601} %highlight(%-5level) [%blue(%t)] %yellow(%C{1}.%M:%L): %msg%n%throwable</pattern>
        </encoder>
    </appender>


    <root level="info">
        <appender-ref ref="Console" />
    </root>

    <logger name="no.cloudberries" level="info" additivity="false">
        <appender-ref ref="Console" />
    </logger>
</configuration>
