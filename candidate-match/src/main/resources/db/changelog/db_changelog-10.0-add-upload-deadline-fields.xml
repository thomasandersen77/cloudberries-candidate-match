<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="20251001-01-add-upload-deadline-fields" author="agent">
        <addColumn tableName="customer_project_request">
            <column name="uploaded_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="deadline_date" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        
        <rollback>
            <dropColumn tableName="customer_project_request" columnName="uploaded_at"/>
            <dropColumn tableName="customer_project_request" columnName="deadline_date"/>
        </rollback>
    </changeSet>

</databaseChangeLog>