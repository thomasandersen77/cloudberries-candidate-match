<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="20251002-01-ai-conversation-fk-cascade" author="agent">
        <dropForeignKeyConstraint baseTableName="ai_conversation_turn" constraintName="fk_turn_conversation"/>
        <addForeignKeyConstraint constraintName="fk_turn_conversation"
                                  baseTableName="ai_conversation_turn" baseColumnNames="conversation_id"
                                  referencedTableName="ai_conversation" referencedColumnNames="id"
                                  onDelete="CASCADE"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="ai_conversation_turn" constraintName="fk_turn_conversation"/>
            <addForeignKeyConstraint constraintName="fk_turn_conversation"
                                      baseTableName="ai_conversation_turn" baseColumnNames="conversation_id"
                                      referencedTableName="ai_conversation" referencedColumnNames="id"/>
        </rollback>
    </changeSet>
</databaseChangeLog>